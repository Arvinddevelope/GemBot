<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/home_background_color_basic">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_basic"
            android:elevation="4dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <!-- App Logo -->
                <ImageView
                    android:id="@+id/appLogoInToolbar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/cd_app_logo"
                    app:srcCompat="@drawable/app_logo"
                    app:tint="@color/white_basic" />

                <!-- App Title -->
                <TextView
                    android:id="@+id/appTitleInToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/app_name_gembot"
                    android:textColor="@color/white_basic"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Settings Button -->
                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/cd_settings"
                    android:focusable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_settings"
                    app:tint="@color/white_basic" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Welcome Section -->
        <LinearLayout
            android:id="@+id/welcomeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBarLayout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/simple_card_background_basic"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:text="@string/home_welcome_title"
            android:textColor="@color/text_primary_basic"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/home_welcome_subtitle"
            android:textColor="@color/text_secondary_basic"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Key Features -->
    <LinearLayout
        android:id="@+id/keyFeaturesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeCard"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/home_features_title"
            android:textColor="@color/text_primary_basic"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Feature 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/simple_item_background_basic">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/cd_feature_answers"
                app:srcCompat="@drawable/ic_question_answer"
                app:tint="@color/icon_tint_basic"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_feature_1"
                android:textColor="@color/text_primary_basic"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>

        <!-- Feature 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/simple_item_background_basic">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/cd_feature_ideas"
                app:srcCompat="@drawable/ic_idea"
                app:tint="@color/icon_tint_basic"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_feature_2"
                android:textColor="@color/text_primary_basic"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>

        <!-- Feature 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/simple_item_background_basic">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/cd_feature_chat"
                app:srcCompat="@drawable/ic_chat_bubble"
                app:tint="@color/icon_tint_basic"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_feature_3"
                android:textColor="@color/text_primary_basic"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Example Prompts -->
    <LinearLayout
        android:id="@+id/examplePromptsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/keyFeaturesLayout"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/home_prompts_title"
            android:textColor="@color/text_primary_basic"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Prompt 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/simple_item_background_subtle_basic">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/cd_prompt_suggestion"
                app:srcCompat="@drawable/ic_prompt_suggestion"
                app:tint="@color/primary_basic"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_prompt_1"
                android:textColor="@color/text_primary_basic"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>

        <!-- Prompt 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/simple_item_background_subtle_basic">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/cd_prompt_suggestion"
                app:srcCompat="@drawable/ic_prompt_suggestion"
                app:tint="@color/primary_basic"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_prompt_2"
                android:textColor="@color/text_primary_basic"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>

        <!-- Prompt 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/simple_item_background_subtle_basic">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/cd_prompt_suggestion"
                app:srcCompat="@drawable/ic_prompt_suggestion"
                app:tint="@color/primary_basic"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_prompt_3"
                android:textColor="@color/text_primary_basic"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Start Chat Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/examplePromptsLayout"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="@string/home_start_chat_button"
        android:textAllCaps="false"
        android:textColor="@color/white_basic"
        android:textSize="18sp"
        app:backgroundTint="@color/primary_basic"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_chat_start"
        app:iconGravity="textStart"
        app:iconTint="@color/white_basic" />
</RelativeLayout>
</androidx.core.widget.NestedScrollView>
